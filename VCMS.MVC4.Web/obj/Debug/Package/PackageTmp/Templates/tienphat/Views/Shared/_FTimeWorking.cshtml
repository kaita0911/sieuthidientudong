@using System.Data.Entity;
@using (DataContext db = new DataContext())
{
    var id = ArticleType.GetIdByCode("TIMEWORKING");
    var article = Article.GetByType(id, SiteConfig.SiteId, SiteConfig.LanguageId, ArticleFlags.ACTIVE, 1, 3, ArticleSortOrder.SORT_ORDER, VCMS.MVC4.Data.SortDirection.ASCENDING, ArticleIncludeFlags.PROPERTIES).List;
    if (article.Count > 0)
    {
        <div class="box-footer f-item-working">
            <h2 class="heading">Thời gian làm việc</h2>
            <div class="content">
                <ul>
                    @foreach (var item in article)
                    {
                        <li><i class="fa fa-clock-o"></i><span>@item.ArticleName</span></li>
                    }
                </ul>
            </div>
        </div>
    }

}

