@model Widget
@{
    var lst = Article.GetByType((int)Model.ArticleTypeId, SiteConfig.LanguageId, Model.Attribute, 1, Model.Number, Model.SortOrder, Model.SortDirection).List;
    var effect = Model.Effect1 ? "banner-cubic-1" : Model.Effect2 ? "banner-cubic-2" : Model.Effect3 ? "banner-cubic-3" : Model.Effect4 ? "banner-cubic-4" : Model.Effect5 ? "banner-cubic-5" : Model.Effect6 ? "banner-cubic-6" : Model.Effect7 ? "banner-cubic-7" : "";
}
@if (lst.Count > 0)
{
    <div id="adv-main-small" class="adv-main-small">
        <ul class="row">
            @foreach (var item in lst)
            {
                var url = item["URL"];
                <li class="col-lg-6 col-md-6">
                    <div class="item">
                        <figure>
                            <a href="@url" target="_blank" class="@effect">
                                @Html.Image(item.ImageUrl, new ImageOptions { Width = 570, Height = 270, Mode = ImageMode.crop, Lazy = false }, new { alt = item.ArticleName, @class = "owl" })
                            </a>
                        </figure>
                    </div>
                </li>
            }
        </ul>
    </div>
}